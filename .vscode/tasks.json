{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "autopep8 current file",
            "type": "process",
            "command": "${config:python.pythonPath}",
            "args": [
                "-m",
                "autopep8",
                "-i",
                "${file}"
            ]
        },
        {
            "label": "Enable Debug for debug_test",
            "type" : "shell",
            "isBackground": true,
            "command": "docker",
            "args": ["exec", "-ti", "PythonDocker", "python3", "-m", "ptvsd", "--host", "0.0.0.0", "--port", "5678", "--wait", "/code/project/debug_test.py"]
        }
    ]
}